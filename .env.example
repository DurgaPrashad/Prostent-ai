# Prostent - Murf Voice Agent Hackathon
# Copy this file to .env and fill in your API keys

# ============================================
# BACKEND CONFIGURATION (.env in /backend)
# ============================================

# Node.js Environment
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://prostent:prostent99@cluster0.jry2x4n.mongodb.net/?appName=Cluster0
MONGODB_DB_NAME=prostent

# JWT Authentication
JWT_SECRET=prostent_secret_key_for_hackathon

# ============================================
# AI & NLP SERVICES
# ============================================

# Google Gemini API (for NLP and response generation)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# ============================================
# MURF FALCON TTS API (PRIMARY - REQUIRED)
# ============================================

# Murf Falcon TTS API for real-time speech synthesis
MURF_API_KEY=your_murf_api_key_here
MURF_API_URL=https://api.murf.ai/v1
MURF_VOICE_ID=default_voice_id

# ============================================
# SPEECH RECOGNITION (CHOOSE ONE)
# ============================================

# Option 1: Deepgram ASR (Recommended)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Option 2: AssemblyAI ASR (Alternative)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
ASSEMBLYAI_WEBHOOK_URL=https://your-domain.com/webhook/assemblyai

# ============================================
# APPLICATION SETTINGS
# ============================================

# Conversation Management
MAX_CONVERSATION_LENGTH=10
CONVERSATION_TIMEOUT=3600000
SESSION_TIMEOUT=86400000

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============================================
# FRONTEND CONFIGURATION (.env in /frontend)
# ============================================

# API Endpoint Configuration
VITE_BACKEND_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# Optional: Frontend Gemini API (if needed for local processing)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Application Environment
VITE_ENV=development

# ============================================
# NOTES
# ============================================
# 1. Get Murf API Key: https://www.murf.ai
# 2. Get Deepgram Key: https://console.deepgram.com
# 3. Get AssemblyAI Key: https://www.assemblyai.com
# 4. Get Gemini Key: https://ai.google.dev/
# 5. Get MongoDB: https://www.mongodb.com/cloud/atlas
# 
# Never commit this file to version control
# Always use .env.example as template
